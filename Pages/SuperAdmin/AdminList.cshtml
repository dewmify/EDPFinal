@page
@model EDPFinal.Pages.SuperAdmin.AdminListModel
@{
    ViewData["Title"] = "Admin List Page";
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.alladmins[0].ID)</th>
            <th>@Html.DisplayNameFor(model => model.alladmins[0].Email)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model.alladmins != null)
            {
                @foreach (var item in Model.alladmins)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-page="/SuperAdmin/EditAdmin" asp-route-id="@item.ID">Edit</a>
                        </td>
                        <td>
                            <a asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to delete?')" asp-page="/SuperAdmin/DeleteAdmin">Delete</a>
                        </td>
                        <td>
                            <a asp-page="/SuperAdmin/AdminDetail" asp-route-id="@item.ID">View</a>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
