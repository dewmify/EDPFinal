@page
@model EDPFinal.Pages.Admin.LoginModel
@{
}

<body>
    <form id="form1" runat="server" class="formBox" method="post">
        <div class="titleBox">
            <h2>Log In As Admin</h2>
        </div>
        <div class="usernameBox">
            <span class="labelBox">Email/Phone number</span><br />
            <input type="text" asp-for="Admin.adminEmail" name="Email" class="Email" />
        </div>
        <br />
        <div class="passwordBox">
            <span class="labelBox">Password</span><br />
            <input type="password" asp-for="Admin.adminPassword" name="Password" class="Password" />
        </div>
        <br />
        <div>
            <p class="text-danger">@Model.errorMessage</p>
        </div>
        <br />
        <button a href="../Index" type="submit">Log in</button>
        <br />
        
    </form>
</body>