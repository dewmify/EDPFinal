@page
@model EDPFinal.Pages.Admin.UnapprovedCoursesModel
@{
    ViewData["Title"] = "Approve Courses - Admin";
}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Format</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model.AllCourses != null)
            {
                @foreach (var cor in Model.AllCourses.Where(i => i.approvalStatus == false))
                {
                        <tr>
                            <td>@cor.courseTitle</td>
                            <td>@cor.courseGenre</td>
                            @{ if (cor.courseFormat == false)
                                {
                                    <td>Video</td>
                                }
                                else if (cor.courseFormat == true)
                                {
                                    <td>Live</td>
                                }
                            }
                            <td>
                                <a asp-route-id="@cor.courseID" onclick="return confirm('Confirm approval')" asp-page="/Admin/ApproveCourse">Approve</a>
</td>
                        </tr>
                 }
            }
         }
    </tbody>
</table>
