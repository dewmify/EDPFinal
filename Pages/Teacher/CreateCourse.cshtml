@page
@model EDPFinal.Pages.Teacher.CreateCourseModel
@{
    ViewData["Title"] = "Create Course";
}

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label class="col-sm-2 col-form-label">Course Title:</label>
        <input asp-for="MyCourses.courseTitle" placeholder="No Special Characters" />
        <span asp-validation-for="MyCourses.courseTitle" class="text-danger"></span>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">Course Genre:</label>
        @Html.DropDownList("MyCourses.courseGenre", new SelectList(Enum.GetValues(typeof(Models.Genre))), "--Select an option--")
        <span asp-validation-for="MyCourses.courseGenre" class="text-danger"></span>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">Course Format:</label>
        @Html.RadioButton("MyCourses.courseFormat", false)<span>Video</span>
        @Html.RadioButton("MyCourses.courseFormat", true)<span>Live</span>
        <span asp-validation-for="MyCourses.courseFormat" class="text-danger"></span>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">Course Price($):</label>
        <input asp-for="MyCourses.coursePrice" placeholder="Enter Price Number" />
        <span asp-validation-for="MyCourses.coursePrice" class="text-danger"></span>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">Course Details:</label>
        <textarea style="width:300px;" asp-for="MyCourses.courseInfo" placeholder="Maximum of 500 Characters"></textarea>
        <span asp-validation-for="MyCourses.courseInfo" class="text-danger"></span>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">Video:</label>
        <input asp-for="MyCourses.courseVideo" placeholder="Youtube Video Link Here" />
        <span asp-validation-for="MyCourses.courseVideo" class="text-danger"></span>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">Thumbnail:</label>
        <input type="file" asp-for="courseImage" name="courseImage" />
    </div>
    <div class="col-sm-10">
        <input id="create" type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
