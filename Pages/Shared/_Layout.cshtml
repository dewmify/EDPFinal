@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EDPFinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body style="background-color: mediumpurple">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">SkillsLah!</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul nav="id" class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                        @if (Context.Session.GetInt32("ID") != null)
                        {
                            <div class="navbar-collapse">
                                <partial name="_LoginPartial" />
                            </div>
                        }
                        else if (Context.Session.GetString("userType") == "False")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Courses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Search">Search</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/TeacherGuides/RetrieveGuide">Teacher's Guides'</a>
                            </li>
                            <div class="navbar-collapse">
                                <partial name="_LoginPartial" />
                            </div>
                        }
                        else if (Context.Session.GetString("userType") == "True")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Courses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Search">Search</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/TeacherGuides/RetrieveGuide">Teacher's Guides'</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Teacher/CreateCourse">Create Courses</a>
                            </li>
                            <div class="navbar-collapse">
                                <partial name="_LoginPartial" />
                            </div>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/SuperAdmin/CreateAdmin">Create Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/SuperAdmin/AdminList">List of Admins</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/TeacherGuides/CreateGuide">Create Guides</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top">
        <div class="container">
            &copy; 2021 - EDPFinal - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
